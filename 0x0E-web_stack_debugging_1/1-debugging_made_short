# !/usr/bin/env bash
# configuration of Ngnix srver to listen on port 80

# creating a symbolic link (-a option) between the Nginx configuration file
# and the enabled sites directory
ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
# restart nginx start
sudo service nginx restart
# terminating the first nginx process ID
kill "$(pgrep 'nginx' | head -1)"
